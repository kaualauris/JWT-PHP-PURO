{
  "openapi": "3.0.0",
  "info": {
    "title": "API PHP Puro com JWT",
    "description": "Documentação interativa da nossa API de produtos",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "http://localhost/jwt",
      "description": "Servidor Local"
    }
  ],
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    }
  },
  "paths": {
    "/produtos": {
      "get": {
        "summary": "Lista todos os produtos",
        "security": [{"bearerAuth": []}],
        "responses": {
          "200": { "description": "Sucesso" },
          "401": { "description": "Não autorizado" }
        }
      },
      "post": {
        "summary": "Cria um novo produto",
        "security": [{"bearerAuth": []}],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": { "type": "string" },
                  "price": { "type": "number" },
                  "description": { "type": "string" }
                }
              }
            }
          }
        },
        "responses": {
          "201": { "description": "Criado" }
        }
      }
    }
  }
}